{
  "compilerOptions": {
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "paths": {
      "@app/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@core/*": ["src/core/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  }
} 